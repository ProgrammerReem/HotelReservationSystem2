<!DOCTYPE html>
<html>
<head>
    <title>Generate Reports</title>
</head>
<body>
    <h1>Generate Reports</h1>

    <form method="get" action="/Reports/GenerateMonthlyReport" target="_blank">
        <label for="month">Select Month:</label>
        <input type="month" id="month" name="month" required>
        <button type="submit">Generate Monthly Report</button>
        <a href="@Url.Action("GenerateMonthlyReport", new { month = Model.Month })" target="_blank">
            Download Monthly Revenue Report
        </a>

    </form>


    <form method="get" action="@Url.Action("GenerateReport")" target="_blank">
        <label for="month">Select Month:</label>
        <input type="month" id="month" name="month" required>
        <button type="submit">Generate Monthly Report</button>
    </form>




    <form method="get" action="/Reports/GenerateAnnualReport" target="_blank">
        <label for="year">Select Year:</label>
        <input type="number" id="year" name="year" min="2020" max="2100" required>
        <button type="submit">Generate Annual Report</button>
    </form>
</body>
</html>
